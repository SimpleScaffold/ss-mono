{
    "name": "ss-mono-final",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "packageManager": "yarn@4.12.0",
    "workspaces": [
        "apps/fe/host/*",
        "apps/fe/remote/*",
        "packages/fe/*",
        "packages/shared/*"
    ],
    "scripts": {
        "dev": "MF_ENV=local turbo run dev --filter='@repo/remote-app*' & node scripts/wait-for-remote.js && MF_ENV=local turbo run dev --filter='@repo/host-app*'",
        "dev:server-dev": "MF_ENV=server-dev turbo run dev",
        "dev:server-prod": "MF_ENV=server-prod turbo run dev",
        "dev:remote": "MF_ENV=dev-remote turbo run dev --filter=@repo/host-app",
        "build": "turbo run build",
        "preview": "turbo run preview",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint -- --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path .prettierignore",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path .prettierignore",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@antdevx/vite-plugin-hmr-sync": "^1.0.0",
        "@module-federation/vite": "^1.9.7",
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.0.0",
        "prettier-plugin-tailwindcss": "^0.6.0",
        "tailwindcss": "^4.0.0",
        "turbo": "^2.7.6",
        "tw-animate-css": "^1.0.0",
        "typescript": "^5.3.0",
        "vite": "^5.4.0"
    },
    "overrides": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "typescript": "^5.3.0",
        "vite": "^5.4.0",
        "tailwindcss": "^4.0.0"
    },
    "resolutions": {
        "vite": "^5.4.0"
    }
}
